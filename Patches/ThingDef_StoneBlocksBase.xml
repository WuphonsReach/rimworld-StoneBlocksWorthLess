<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <!-- 
    A really good example of PatchOperationConditional from Nature is Beautiful
    https://gist.github.com/thakyZ/64385f3dd38e56c9f7b7e8365a64385b#file-natureisbeautifulwithrimcuisine_twb-xml-L112-L131 
    But if we're having to do complicated PatchOperationConditional... maybe just use XML Extensions.
    -->

  <!-- 
    In my game, something gets in the way of overriding the statBases/MarketValue. 
    Probably Vanilla Trading Expanded.
    -->

  <!-- default MarketValue is 0.9 for vanilla stone blocks and 2.0 for vacstone -->

  <!-- Adjusting the "stuffProps/statFactors/MarketValue" fails to have an in-game effect
  on the value of things like shelves and walls. The default value is 0.40. -->

  <!-- per experiments, walls have a base value of around $3.30. -->

  <Operation Class="XmlExtensions.PatchOperationSafeAddOrReplace">
    <xpath>Defs/ThingDef[defName="BlocksGranite"]</xpath>
    <value>
        <statBases>
            <MarketValue>0.20</MarketValue>
        </statBases>
        <!-- 
        <stuffProps>
          <statFactors>
            <MarketValue>0.05</MarketValue>
          </statFactors>
        </stuffProps>
        -->
    </value>
</Operation>

  <Operation Class="XmlExtensions.PatchOperationSafeAddOrReplace">
    <xpath>Defs/ThingDef[defName="BlocksLimestone"]</xpath>
    <value>
        <statBases>
            <MarketValue>0.20</MarketValue>
        </statBases>
        <!-- 
        <stuffProps>
          <statFactors>
            <MarketValue>0.10</MarketValue>
          </statFactors>
        </stuffProps>
        -->
    </value>
</Operation>

  <Operation Class="XmlExtensions.PatchOperationSafeAddOrReplace">
    <xpath>Defs/ThingDef[defName="BlocksSandstone"]</xpath>
    <value>
        <statBases>
            <MarketValue>0.50</MarketValue>
        </statBases>
        <!--
        <stuffProps>
          <statFactors>
            <MarketValue>0.20</MarketValue>
          </statFactors>
        </stuffProps>
        -->
    </value>
</Operation>

  <Operation Class="XmlExtensions.PatchOperationSafeAddOrReplace">
    <xpath>Defs/ThingDef[defName="BlocksSlate"]</xpath>
    <value>
        <statBases>
            <MarketValue>0.50</MarketValue>
        </statBases>
        <!--
        <stuffProps>
          <statFactors>
            <MarketValue>0.40</MarketValue>
          </statFactors>
        </stuffProps>
        -->
    </value>
</Operation>


</Patch>